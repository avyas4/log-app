{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
  ]
}
